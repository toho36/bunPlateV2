# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# 4 space indentation for Python files
[*.py]
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# 4 space indentation for Go files
[*.go]
indent_size = 4

# No trailing whitespace for Markdown files
[*.md]
trim_trailing_whitespace = false

# 4 space indentation for YAML files
[*.{yml,yaml}]
indent_size = 2

# 2 space indentation for JSON files
[*.json]
indent_size = 2

# 2 space indentation for CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2