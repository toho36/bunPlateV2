{
  "name": "bunplate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Modern web application boilerplate with Bun runtime, optimized for Vercel deployment",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "echo 'ğŸ” Checking TypeScript types...' && tsc --noEmit && echo 'âœ… TypeScript check passed!'",
    "type-safety": "echo 'ğŸ›¡ï¸ Running comprehensive type safety check...' && bun run lint && bun run type-check && echo 'âœ… All type safety checks passed!'",
    "security:audit": "echo 'ğŸ” Checking for vulnerabilities...' && npm audit --package-lock-only || echo 'ğŸ“ No npm audit available with Bun'",
    "security:outdated": "bun outdated",
    "security:check": "echo 'ğŸ›¡ï¸ Running security checks...' && bun run security:outdated",
    "security:full": "echo 'ğŸ”’ Running full security scan...' && bun run security:check && bun run type-safety && echo 'âœ… Security scan completed!'",
    "pre-deploy": "echo 'ğŸš€ Running pre-deployment checks...' && bun run format:check && bun run type-safety && echo 'âœ… All checks passed! Ready for deployment!'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "clean": "rm -rf .next .turbo node_modules/.cache test-results",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:deploy": "bunx prisma migrate deploy",
    "db:migrate:reset": "bunx prisma migrate reset",
    "db:migrate:status": "bunx prisma migrate status",
    "db:seed": "cd prisma && bun seed.ts",
    "db:studio": "bunx prisma studio",
    "db:setup": "bun run db:push && bun run db:seed",
    "db:deploy": "bun run db:generate && bun run db:migrate:deploy && bun run db:seed",
    "db:verify": "bunx prisma validate && (bunx prisma migrate status || echo 'Database not managed by migrations - using db push mode')",
    "vercel:build": "bunx prisma generate && next build",
    "postinstall": "bunx prisma generate",
    "validate-structure": "bun run scripts/validate-structure.ts",
    "pre-push": "bun run scripts/pre-push-checks.ts",
    "pre-push-fix": "bun run scripts/pre-push-checks.ts --fix",
    "check-all": "bun run pre-push",
    "setup-hooks": "bash scripts/setup-hooks.sh"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@kinde-oss/kinde-auth-nextjs": "^2.8.6",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.15",
    "@tanstack/react-query": "^5.85.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "ky": "^1.8.2",
    "lucide-react": "^0.536.0",
    "next": "^15.4.6",
    "next-intl": "^4.3.4",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "resend": "^6.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@mermaid-js/mermaid-cli": "^11.9.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.17.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.14.0",
    "prisma-erd-generator": "^2.0.4",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.38"
}
