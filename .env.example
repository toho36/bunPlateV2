# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=GameOne
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/gameone"
DIRECT_URL="postgresql://user:password@localhost:5432/gameone"

# Authentication Configuration (Kinde)
KINDE_CLIENT_ID=your_kinde_client_id
KINDE_CLIENT_SECRET=your_kinde_client_secret
KINDE_ISSUER_URL=https://your-domain.kinde.com
KINDE_SITE_URL=http://localhost:3000
KINDE_POST_LOGOUT_REDIRECT_URL=http://localhost:3000
KINDE_POST_LOGIN_REDIRECT_URL=http://localhost:3000/dashboard

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
DEFAULT_REPLY_TO_EMAIL=support@yourdomain.com

# Email Settings
EMAIL_TEST_MODE=true
EMAIL_RATE_LIMIT_PER_MINUTE=10
EMAIL_RATE_LIMIT_PER_HOUR=100

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MONITORING=false

# Development Configuration
PRISMA_DEBUG=false
DATABASE_DEBUG=false
NEXT_TELEMETRY_DISABLED=1

# Optional: Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
POSTHOG_KEY=your_posthog_key
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Optional: Storage
BLOB_READ_WRITE_TOKEN=your_blob_token

# Optional: Redis (for caching)
REDIS_URL=redis://localhost:6379

# CI/CD Configuration
CODECOV_TOKEN=your_codecov_token
VERCEL_TOKEN=your_vercel_token
VERCEL_ORG_ID=your_vercel_org_id
VERCEL_PROJECT_ID=your_vercel_project_id